<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.subbook.Edit_item">

    <Button
        android:id="@+id/done_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="@string/edit_name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edit_date"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/edit_date"
        android:layout_width="253dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="@string/date_started"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edit_charge"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/edit_charge"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="@string/monthly_charge"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edit_comment"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/edit_comment"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="@string/Comment"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/done_edit"
        tools:layout_editor_absoluteX="85dp" />

</android.support.constraint.ConstraintLayout>
