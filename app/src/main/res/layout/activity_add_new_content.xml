<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.subbook.Add_new_content">

    <EditText
        android:id="@+id/enter_name"
        android:layout_width="301dp"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="@string/edit_name"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/enter_date"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/enter_date"
        android:layout_width="301dp"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="@string/date_started"
        android:inputType="date"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/enter_charge"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/enter_charge"
        android:layout_width="301dp"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="@string/monthly_charge"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/enter_comment"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/enter_comment"
        android:layout_width="301dp"
        android:layout_height="44dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:hint="@string/Comment"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/done_in_add"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/done_in_add"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="40dp"
        android:text="DONE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clear_in_add"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clear_in_add"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="60dp"
        android:text="CLEAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Back_in_add"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/done_in_add" />

    <Button
        android:id="@+id/Back_in_add"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="40dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clear_in_add" />

</android.support.constraint.ConstraintLayout>
